{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"strictNullChecks": true,
		"skipLibCheck": true,
		"lib": [
			"es6",
			"dom",
			"esnext",
			"esnext.asynciterable"
		]
	},
	"include": [
		"src/**/*"
	]
}
